{
	"name": "magic-chat",
	"version": "0.0.0",
	"private": true,
	"type": "module",
	"scripts": {
		"build": "export NODE_OPTIONS=--max-old-space-size=8192 && npm run build:magic-flow && vite build",
		"build:packages": "turbo run build",
		"build:magic-flow": "cd packages/magic-flow && npm run build",
		"check-types:packages": "turbo run check-types",
		"coverage": "vitest run --coverage",
		"dev": "vite",
		"dev:flow": "concurrently \"cd packages/magic-flow && npm run build:watch\" \"vite\"",
		"dev:packages": "turbo run dev",
		"lint": "turbo run build && tsc && eslint ./src --ext ts,tsx --format stylish --report-unused-disable-directives",
		"lint:fix": "eslint ./src --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
		"lint:packages": "turbo run lint",
		"lint:packages:fix": "turbo run lint:fix",
		"prepare": "husky install && turbo run build",
		"preview": "vite preview",
		"release:packages": "turbo run release",
		"test": "vitest run --config ./vitest.config.ts",
		"test:ci": "CI=true vitest run --config ./vitest.config.ts",
		"test:watch": "vitest run --config ./vitest.config.ts --watch"
	},
	"lint-staged": {
		"./src/**/*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"prettier --write"
		],
		"./src/locales/**/*.json": [
			"prettier --write"
		],
		"package.json": "sort-package-json"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
